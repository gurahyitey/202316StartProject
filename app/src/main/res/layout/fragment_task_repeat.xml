<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.a202316startproject.taskrepeat.VMTaskRepeat" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView4"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"

                    android:text="sunday" />

                <LinearLayout
                    android:id="@+id/linearSunday"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"

                    android:text="monday" />

                <LinearLayout
                    android:id="@+id/linearMonday"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"

                    android:text="tuesday" />

                <LinearLayout
                    android:id="@+id/linearTuesday"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"

                    android:text="wednesday" />

                <LinearLayout
                    android:id="@+id/linearWednesday"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:id="@+id/textView8"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"

                    android:text="thursday" />

                <LinearLayout
                    android:id="@+id/linearThursday"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:id="@+id/textView9"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"

                    android:text="friday" />

                <LinearLayout
                    android:id="@+id/linearFriday"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:id="@+id/textView10"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"

                    android:text="saturday" />

                <LinearLayout
                    android:id="@+id/linearSaturday"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button"

            android:layout_width="60dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"

            android:background="@drawable/ic_round_add_24"
            android:onClick="@{() -> viewModel.clickAddButton()}"

            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="200dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="550dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>